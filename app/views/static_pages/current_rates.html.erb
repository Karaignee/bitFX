<% provide(:title, 'Current Exchange Rates') %>

<h1>Current Exchange Rates</h1>


<div ng-app="app">
<div class="divLeft" ng-controller="currencyList" ng-init="getCurrencies()">
  <table class="table table-striped table-bordered table-condensed">
    <th>Currency</th>
    <tr ng-repeat="(key, data) in currency">
    <td>{{data}}</td>
    </tr>
  </table>
  </div>

<div class="divRight" ng-controller="marketList" ng-init="getRates()">
<table class="table table-striped table-bordered table-condensed">
  <th>Currency Abr</th>
  <th>Rates </th>
  <tr ng-repeat="(key, data) in rates.rates">
    <td>{{key}}</td>
    <td>{{data}}</td>
  </tr>
</table>
</div>
</div>

